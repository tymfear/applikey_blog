<%= content_for :title, "My Profile" %>

<div class="d-flex align-items-center justify-content-start">
  <div class="p-2"><h1><%= yield(:title) %></h1></div>
  <div class="ml-auto p-2">
    <%= link_to 'Edit', edit_user_path(@current_user), class: 'btn btn-info ' %>
  </div>
</div>
<hr>


<div class="row">
  <div class="card col-md-4 offset-md-4">
    <% if @current_user.avatar_data.present? %>
      <img class="card-img-top avatar" src="<%= @current_user.avatar_data %>"
           alt="My Avatar">
    <% end %>
    <div class="card-block">
      <h4 class="card-title"><%= @user.username %></h4>
      <p class="card-text"><%= @user.email %></p>
    </div>
  </div>
</div>
