<%= content_for :title, "My Profile" %>

<div class="d-flex align-items-center justify-content-start">
  <div class="p-2"><h1><%= yield(:title) %></h1></div>
  <div class="ml-auto p-2">
    <%= link_to 'Edit', [:edit, current_user], class: 'btn btn-info ' %>
  </div>
</div>
<hr>


<div class="row">
  <div class="card col-md-4 offset-md-4">
    <% if current_user.avatar_data.present? %>
        <%= image_tag current_user.avatar_data,
                      alt: 'My avatar', class: "card-img-top avatar" %>
    <% end %>
    <div class="card-block">
      <h4 class="card-title"><%= current_user.username %></h4>
      <p class="card-text"><%= current_user.email %></p>
    </div>
  </div>
</div>
