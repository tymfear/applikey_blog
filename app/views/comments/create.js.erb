<% if @comment.errors.empty? %>
  var comment_html = $('<%= j render @comment %>');

  <% if comment_id.nil? %>
    comment_html.hide().prependTo('#comments-list').fadeIn();

    $("#article-comment").val('');
  <% else %>
    comment_html.hide()
      .prependTo('#comments-list-<%= comment_id %>')
      .fadeIn();

    $("#comment-comment-<%= comment_id %>").val('');
  <% end %>

  <% else %>
    $('#comment-error-<%= comment_id %>')
      .html('<%= error_badges @comment %>');
<% end %>
