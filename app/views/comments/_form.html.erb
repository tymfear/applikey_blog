<%= form_for [article, comment], remote: true do |f| %>
  <div class="row">
    <div class="col-8 col-sm-9 col-lg-10">
      <div class="form-group">
        <%= f.hidden_field :comment_id, value: comment.comment_id %>
        <%= f.text_field :body,
                         id:         comment.comment_id ? "comment-comment-#{comment.comment_id}" : 'article-comment',
                         class:       'form-control mb-2 mr-sm-2 mb-sm-0',
                         maxlength:   257,
                         placeholder: 'Leave a comment here...' %>
      </div>
      <div id="comment-error-<%= comment.comment_id %>"></div>
    </div>
    <div class="col-4 col-sm-3 col-lg-2">
      <%= f.submit 'Comment', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
